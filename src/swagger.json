{
  "openapi": "3.0.0",
  "info": {
    "title": "Users API",
    "description": "Create an api user",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create user",
        "description": "Create an api user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@gmail"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created"
          },
          "400": {
            "description": "Email already exists"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "List all users",
        "description": "Get all users if it is admin",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "description": "user ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "404": {
            "description": "User does not exists"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["User"],
        "summary": "Profile",
        "description": "Get user profile",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "description": "user ID",
            "required": true,
            "schema": {
              "type": "string",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          },
          "404": {
            "description": "User does not exists"
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Update user role",
        "description": "Update user role to admin",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "user ID",
            "schema": {
              "type": "string",
              "format": "uuid",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "201": {
            "description": "created"
          },
          "404": {
            "description": "User does not exists"
          }
        }
      }
    }
  }
}
